<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="suite">
    <test name="test"> <!-- первый класс заканчивающийся AfterMethod -->
        <classes>
            <class name="console_tests.First"></class>
        </classes>
    </test>
    <test name="test_2"> <!-- первая часть второго класса. Начинается на BeforeClass заканчивается на AfterMethod -->
        <groups>
            <run>
                <include name="first_half"></include>
            </run>
        </groups>
        <classes>
            <class name="console_tests.Second"></class>
            <class name="console_tests.Fourth"></class> <!-- Четвертый класс - необычный элемент внутри второго класса -->
        </classes>
    </test>
    <test name="test_3"> <!-- вторая часть второго класса. Начинается на Test заканчивается на AfterTest -->
        <groups>
            <run>
                <include name="second_half"></include>
            </run>
        </groups>
        <classes>
            <class name="console_tests.Second"></class>
        </classes>
    </test>
    <test name="test_4"> <!-- третий класс. Начинается на BeforeTest заканчивающийся AfterSuite -->
        <classes>
            <class name="console_tests.Third"></class>
        </classes>
    </test>

</suite>